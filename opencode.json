{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "timeout": 10000
    },
    "gh_grep": {
      "type": "remote", 
      "url": "https://mcp.grep.app",
      "enabled": true,
      "timeout": 10000
    },
    "mcp_everything": {
      "type": "local",
      "command": ["npx", "-y", "@modelcontextprotocol/server-everything"],
      "enabled": true,
      "timeout": 15000,
      "environment": {
        "NODE_ENV": "production"
      }
    },
    "subagent_master": {
      "type": "local",
      "command": ["node", "agents/master.js"],
      "enabled": true,
      "timeout": 20000,
      "environment": {
        "SUBAGENT_MODE": "mcp",
        "AGENT_NAME": "master",
        "LOG_LEVEL": "info"
      }
    },
    "fast_filesystem": {
      "type": "local",
      "command": ["bunx", "-y", "fast-filesystem-mcp"],
      "enabled": true,
      "timeout": 15000,
      "environment": {
        "NODE_ENV": "production"
      }
    }
  },
  "tools": {
    "context7": true,
    "gh_grep": true,
    "mcp_everything": false,
    "subagent_master": true,
    "fast_filesystem": true
  },
  "agent": {
    "master": {
      "description": "Advanced orchestration and protection system for AI agents",
      "mode": "primary",
      "tools": {
        "write": true,
        "edit": true,
        "bash": true,
        "context7": true,
        "gh_grep": true,
        "subagent_master": true,
        "mcp_everything": false,
        "fast_filesystem": true
      },
      "permission": {
        "edit": "allow",
        "bash": "ask"
      },
      "capabilities": [
        "unified-task-orchestration",
        "automatic-delegation", 
        "agent-selection",
        "mcp-integration",
        "fallback-handling",
        "intelligent-task-planning",
        "advanced-parallel-execution",
        "dependency-resolution",
        "dynamic-scheduling",
        "deadlock-avoidance",
        "resource-optimization",
        "real-time-adaptation",
        "configuration-management",
        "agent-discovery",
        "resource-management",
        "performance-monitoring",
        "system-validation",
        "task-execution",
        "tool-selection",
        "mandatory-tool-enforcement",
        "automatic-tool-selection",
        "compliance-monitoring",
        "execution-authorization",
        "tool-decision-matrix",
        "intelligent-workflow-routing"
      ]
    }
  }
}